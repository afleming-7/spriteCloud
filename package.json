{
  "name": "spritecloud",
  "version": "1.0.0",
  "description": "Programming test for spriteCloud",
  "main": "index.js",
  "scripts": {
    "cleanReports": "node -e \"import('fs').then(fs=>{fs.rmSync('allure-results',{recursive:true,force:true});fs.rmSync('allure-report',{recursive:true,force:true});})\"",
    "test": "npx playwright test",
    "UITests": "npx playwright test --grep @UI",
    "APITests": "npx playwright test --grep @API",
    "chromeConfig": "npx playwright test --config playwright.config.js --project=chrome",
    "firefoxConfig": "npx playwright test --config playwright.config.js --project=firefox",
    "report": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afleming-7/spriteCloud.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/afleming-7/spriteCloud/issues"
  },
  "homepage": "https://github.com/afleming-7/spriteCloud#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
