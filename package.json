{
  "name": "spritecloud",
  "version": "1.0.0",
  "description": "Programming test for spriteCloud",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rimraf allure-results allure-report test-results",
    "test": "playwright test",
    "test:ui": "playwright test --grep @UI",
    "test:api": "playwright test --grep @API",
    "test:chrome": "playwright test --config=playwright.config.ts --project=chrome",
    "test:firefox": "playwright test --config=playwright.config.ts --project=firefox",
    "report:allure": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afleming-7/spriteCloud.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/afleming-7/spriteCloud/issues"
  },
  "homepage": "https://github.com/afleming-7/spriteCloud#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "ts-node": "^10.9.2",
    "@types/node": "^20.11.0"
  }
}
